{% extends 'base-back.html.twig' %}

{% block title %}Categoriem index{% endblock %}

{% block body %}
    <h1>TABLEAU DES CATEGORIES</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Fournisseur</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categoriem in categoriems %}
            <tr>
                <td>{{ categoriem.id }}</td>
                <td>{{ categoriem.nom }}</td>
                <td>{{ categoriem.Fournisseur }}</td>

                <td>
                    <a href="{{ path('categoriem_show', {'id': categoriem.id}) }}">show</a>
                    <a href="{{ path('categoriem_edit', {'id': categoriem.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categoriem_new') }}">Create new</a>
{% endblock %}
